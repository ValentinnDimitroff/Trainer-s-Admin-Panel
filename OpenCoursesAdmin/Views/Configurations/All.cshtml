@model IEnumerable<OpenCoursesAdmin.Data.Models.QuizModels.ConfigurationModels.Configuration>

@{
    ViewData["Title"] = "Configurations";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DurationInSeconds)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PossibleAnswersCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionsCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeepQuestionsOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllowMultipleParticipations)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Quiz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DurationInSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PossibleAnswersCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KeepQuestionsOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowMultipleParticipations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quiz.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
